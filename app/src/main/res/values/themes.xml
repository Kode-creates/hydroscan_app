<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.FHydroScan" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#1b5692</item>
        <item name="colorPrimaryDark">#154672</item>
        <item name="colorAccent">#1b5692</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="DialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorPrimary">#1b5692</item>
        <item name="colorPrimaryDark">#154672</item>
        <item name="colorAccent">#1b5692</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>
</resources>