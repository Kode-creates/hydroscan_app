<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#f3f2f2"
    android:minWidth="300dp">

    <!-- Title -->
    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="#1b5692"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"/>

    <!-- Water Type Selection (for gallon products) -->
    <LinearLayout
        android:id="@+id/waterTypeContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Water Type:"
            android:textColor="#1b5692"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/waterTypeGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <RadioButton
                android:id="@+id/radioMineral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mineral"
                android:buttonTint="#1b5692"
                android:textSize="8sp"
                android:textColor="#1b5692"
                android:layout_marginEnd="8dp"
                android:checked="true"
                android:scaleX="0.9"
                android:scaleY="0.9"/>

            <RadioButton
                android:id="@+id/radioAlkaline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alkaline"
                android:buttonTint="#1b5692"
                android:textSize="8sp"
                android:textColor="#1b5692"
                android:layout_marginEnd="8dp"
                android:scaleX="0.9"
                android:scaleY="0.9"/>

            <RadioButton
                android:id="@+id/radioNoRefill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Refill"
                android:buttonTint="#1b5692"
                android:textSize="8sp"
                android:textColor="#1b5692"
                android:scaleX="0.9"
                android:scaleY="0.9"/>
        </RadioGroup>
    </LinearLayout>

    <!-- Gallon Type Selection (for gallon products) -->
    <LinearLayout
        android:id="@+id/gallonTypeContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gallon Type:"
            android:textColor="#1b5692"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/gallonTypeGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <RadioButton
                android:id="@+id/radioSlim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Slim"
                android:buttonTint="#1b5692"
                android:textSize="12sp"
                android:textColor="#1b5692"
                android:layout_marginEnd="16dp"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/radioRound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Round"
                android:buttonTint="#1b5692"
                android:textSize="12sp"
                android:textColor="#1b5692"/>
        </RadioGroup>
    </LinearLayout>

    <!-- Quantity Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity:"
        android:textColor="#1b5692"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/minusButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="-"
            android:textColor="#ffffff"
            android:backgroundTint="#1b5692"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/quantityDisplay"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:text="0"
            android:textColor="#1b5692"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@android:color/white"
            android:elevation="2dp"/>

        <Button
            android:id="@+id/plusButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="+"
            android:textColor="#ffffff"
            android:backgroundTint="#1b5692"
            android:textSize="18sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Cancel"
            android:textColor="#ffffff"
            android:backgroundTint="#808080"
            android:textSize="9sp"/>

        <Button
            android:id="@+id/addToCartButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Add"
            android:textColor="#ffffff"
            android:backgroundTint="#1b5692"
            android:textSize="9sp"/>

    </LinearLayout>

</LinearLayout>
