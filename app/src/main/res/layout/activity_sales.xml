<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffafa"
    tools:context=".Sales">

    <!-- Logo and App Name -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="148dp"
        android:layout_height="37dp"
        android:layout_marginTop="18dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/logo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Sales Report Title -->
    <TextView
        android:id="@+id/salesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:text="Sales Report"
        android:textStyle="bold"
        android:textColor="#1b5692"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Calendar Button -->
    <Button
        android:id="@+id/calendarButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/ic_calendar"
        android:backgroundTint="#1b5692"
        app:layout_constraintTop_toBottomOf="@id/salesTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Report Type Dropdown -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/reportTypeDropdownLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:hint="Weekly"
        app:boxStrokeColor="#1b5692"
        app:hintTextColor="#1b5692"
        app:startIconTint="#1b5692"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        app:layout_constraintTop_toBottomOf="@id/salesTitle"
        app:layout_constraintEnd_toEndOf="parent">

        <AutoCompleteTextView
            android:id="@+id/reportTypeSpinner"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="#1b5692"
            android:textSize="12sp"
            android:inputType="none"
            android:focusable="false" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Date Range Display -->
    <TextView
        android:id="@+id/dateRangeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="September 07, 2025 - September 13, 2025"
        android:textColor="#666666"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/reportTypeDropdownLayout"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Line Graph Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/graphCard"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#E3F2FD"
        app:layout_constraintTop_toBottomOf="@id/dateRangeText">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#ffff"
            android:padding="16dp">

            <!-- Graph Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sales Performance"
                android:textColor="#1b5692"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Placeholder for Line Graph -->
            <View
                android:id="@+id/lineGraphPlaceholder"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:backgroundTint="#1b5692" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Sales Spike Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/salesSpikeCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/graphCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/topCustomerCard"
        app:layout_constraintWidth_percent="0.48">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Card Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sales Spike"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="#1b5692"
                android:padding="12dp"
                android:gravity="center" />

            <!-- QTY Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="#F8F9FA">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="QTY:"
                    android:textColor="#1b5692"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/salesSpikeQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30 Gallons (Friday)"
                    android:textColor="#1b5692"
                    android:textSize="10sp" />

            </LinearLayout>

            <!-- UOM Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="UOM:"
                    android:textColor="#1b5692"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/salesSpikeUom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200L (Tuesday)"
                    android:textColor="#1b5692"
                    android:textSize="10sp" />

            </LinearLayout>

            <!-- Revenue Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="#F8F9FA">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Revenue:"
                    android:textColor="#1b5692"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/salesSpikeRevenue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚±1,500 (Thursday)"
                    android:textColor="#1b5692"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Top Customer Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/topCustomerCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/graphCard"
        app:layout_constraintStart_toEndOf="@id/salesSpikeCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.48">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Card Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Top customer"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="#1b5692"
                android:padding="12dp"
                android:gravity="center" />

            <!-- Customer Name -->
            <TextView
                android:id="@+id/topCustomerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Michelle Obama"
                android:textColor="#1b5692"
                android:textSize="14sp"
                android:textStyle="bold"
                android:padding="16dp"
                android:gravity="center" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Statistics Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/statisticsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/salesSpikeCard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Card Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Statistics"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="#1b5692"
                android:padding="12dp"
                android:gravity="center" />

            <!-- Statistics Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Total Revenue Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:background="#F8F9FA">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total Revenue:"
                        android:textColor="#1b5692"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/totalRevenue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚±0.00"
                        android:textColor="#1b5692"
                        android:textSize="10sp" />

                </LinearLayout>

                <!-- Unpaid Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Unpaid:"
                        android:textColor="#1b5692"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/unpaidInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 qty, No customers"
                        android:textColor="#1b5692"
                        android:textSize="10sp" />

                </LinearLayout>

                <!-- Total Quantity Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:background="#F8F9FA">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total QTY:"
                        android:textColor="#1b5692"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/totalQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#1b5692"
                        android:textSize="10sp" />

                </LinearLayout>

                <!-- Total UOM Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total UOM:"
                        android:textColor="#1b5692"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/totalUom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0L"
                        android:textColor="#1b5692"
                        android:textSize="10sp" />

                </LinearLayout>

                <!-- Most Ordered Water Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:background="#F8F9FA">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Most ordered Water:"
                        android:textColor="#1b5692"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/mostOrderedWater"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mineral"
                        android:textColor="#1b5692"
                        android:textSize="10sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1b5692"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:itemIconTint="#fffafa"
        app:itemTextColor="#fffafa"
        app:menu="@menu/bottom_navmenu" />

</androidx.constraintlayout.widget.ConstraintLayout>