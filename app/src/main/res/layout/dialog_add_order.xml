<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f3f2f2"
    android:minWidth="400dp"
    android:maxHeight="600dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Dialog Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_order"
            android:textColor="#1b5692"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"/>

        <!-- Name Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name*"
                android:textColor="#1b5692"
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_marginEnd="12dp"
                android:minWidth="80dp"/>

            <EditText
                android:id="@+id/nameInput"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="Enter Name"
                android:textColorHint="#7F1B5692"
                android:textColor="#1b5692"
                android:backgroundTint="#1b5692"
                android:textSize="10sp"/>
        </LinearLayout>

        <!-- Address Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address*"
                android:textColor="#1b5692"
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_marginEnd="12dp"
                android:minWidth="80dp"/>

            <EditText
                android:id="@+id/addressInput"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="Enter Address"
                android:textColorHint="#801B5692"
                android:textColor="#1b5692"
                android:backgroundTint="#1b5692"
                android:textSize="10sp"/>
        </LinearLayout>

        <!-- Product Type Dropdown -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Type*"
                android:textColor="#1b5692"
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_marginEnd="12dp"
                android:minWidth="80dp"/>

            <Spinner
                android:id="@+id/productTypeSpinner"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textColor="#1b5692"
                android:textSize="9sp"/>
        </LinearLayout>

        <!-- UOM Spinner -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gallon Type (UOM)*"
                android:textColor="#1b5692"
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_marginEnd="12dp"
                android:minWidth="80dp"/>

            <Spinner
                android:id="@+id/uomSpinner"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textColor="#1b5692"
                android:textSize="9sp"/>
        </LinearLayout>

        <!-- Water Type Radio Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Water Type*"
                android:textColor="#1b5692"
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <RadioGroup
                android:id="@+id/waterTypeGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start">

                <RadioButton
                    android:id="@+id/mineralRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mineral"
                    android:textSize="9sp"
                    android:layout_marginEnd="3dp"
                    android:textColor="#1b5692"
                    android:buttonTint="#1b5692"/>

                <RadioButton
                    android:id="@+id/alkalineRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alkaline"
                    android:textSize="9sp"
                    android:layout_marginEnd="16dp"
                    android:textColor="#F44336"
                    android:buttonTint="#F44336"/>

                <RadioButton
                    android:id="@+id/noRefillRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Refill"
                    android:textSize="9sp"
                    android:textColor="#9E9E9E"
                    android:buttonTint="#9E9E9E"
                    android:visibility="gone"/>
            </RadioGroup>
        </LinearLayout>

        <!-- Accessories Dropdown (for Accessories product type) -->
        <LinearLayout
            android:id="@+id/accessoriesRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/accessoriesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accessory*"
                android:textColor="#1b5692"
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_marginEnd="12dp"
                android:minWidth="80dp"/>

            <Spinner
                android:id="@+id/accessoriesSpinner"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textColor="#1b5692"
                android:textSize="9sp"/>
        </LinearLayout>

        <!-- Quantity Selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity*"
                android:textColor="#1b5692"
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_marginEnd="12dp"
                android:minWidth="80dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="start">
                
                <Button
                    android:id="@+id/minusButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="-"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#1b5692"
                    android:layout_marginEnd="8dp"/>
                
                <TextView
                    android:id="@+id/quantityDisplay"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:text="1"
                    android:textSize="12sp"
                    android:textColor="#1b5692"
                    android:gravity="center"
                    android:background="#F0F0F0"
                    android:layout_marginEnd="8dp"/>
                
                <Button
                    android:id="@+id/plusButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="+"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#1b5692"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Additional Items Container -->
        <LinearLayout
            android:id="@+id/itemsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"/>

        <!-- Add Item Button -->
        <Button
            android:id="@+id/addItemButton"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="+ Add Item"
            android:textColor="#1b5692"
            android:textSize="10sp"
            android:backgroundTint="#E3F2FD"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>

        <!-- Total Price Display -->
        <TextView
            android:id="@+id/totalPriceDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: â‚±0.00"
            android:textColor="#1b5692"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- Payment Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Status*"
                android:textColor="#1b5692"
                android:textStyle="bold"
                android:textSize="10sp"
                android:layout_marginBottom="8dp"/>

            <RadioGroup
                android:id="@+id/paymentStatusGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start">

                <RadioButton
                    android:id="@+id/paidRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/paid"
                    android:textSize="10sp"
                    android:buttonTint="#4CAF50"
                    android:textColor="#4CAF50"
                    android:layout_marginEnd="16dp" />

                <RadioButton
                    android:id="@+id/unpaidRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="@string/unpaid"
                    android:buttonTint="#FF9800"
                    android:textColor="#FF9800"/>
            </RadioGroup>
        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/addButton"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="@string/add"
                android:textSize="12sp"
                android:backgroundTint="#1b5692"
                android:layout_marginBottom="12dp"
                android:textColor="#fffafa"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#1b5692"
                android:background="#97AAC5"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:text="@string/cancel"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView> 