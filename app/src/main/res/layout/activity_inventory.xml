<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffafa"
    tools:context=".Inventory">

    <!-- Logo and App Name -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="148dp"
        android:layout_height="37dp"
        android:layout_marginTop="18dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/logo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/inventoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inventory_title"
        android:textColor="#1b5692"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/inventoryTitle"
        app:layout_constraintBottom_toTopOf="@id/bottomNav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Gallon Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/gallon_section"
                        android:textColor="#1b5692"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:background="#f3f2f2"/>

                    <ImageButton
                        android:id="@+id/addGallon"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:src="@drawable/ic_add"
                        android:contentDescription="@string/add_gallon_button"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="8dp"
                        app:tint="#1b5692"/>
                </LinearLayout>

                <!-- Inv Icons -->

                <!-- Gallon Section Box -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:src="@drawable/invslim"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:id="@+id/qtySlimGallon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/qty_format"
                            android:textSize="10sp"
                            android:textColor="#1b5692"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/slim_gallon"
                            android:textSize="10sp"
                            android:textAlignment="center"
                            android:textColor="#1b5692"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:src="@drawable/invround"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:id="@+id/qtyRoundGallon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/qty_format"
                            android:textColor="#1b5692"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/round_gallon"
                            android:textSize="10sp"
                            android:textAlignment="center"
                            android:textColor="#1b5692"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Seal Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/seal_section"
                        android:textColor="#1b5692"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:background="#f3f2f2"/>

                    <ImageButton
                        android:id="@+id/addSeal"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:src="@drawable/ic_add"
                        android:contentDescription="@string/add_seal_button"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="8dp"
                        app:tint="#1b5692"/>
                </LinearLayout>

                <!-- Seal Section Box -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:src="@drawable/imvsmall"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:id="@+id/qtySmallCapSeal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/qty_format"
                            android:textSize="10sp"
                            android:textColor="#1b5692"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/small_cap_seal"
                            android:textSize="10sp"
                            android:textAlignment="center"
                            android:textColor="#1b5692"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:src="@drawable/invbig"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:id="@+id/qtyBigCapSeal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/qty_format"
                            android:textSize="10sp"
                            android:textColor="#1b5692"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/big_cap_seal"
                            android:textSize="10sp"
                            android:textAlignment="center"
                            android:textColor="#1b5692"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:src="@drawable/invfaucet"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:id="@+id/qtyFaucetSeal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/qty_format"
                            android:textSize="10sp"
                            android:textColor="#1b5692"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/faucet_seal"
                            android:textSize="10sp"
                            android:textAlignment="center"
                            android:textColor="#1b5692"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:src="@drawable/invumbre"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:id="@+id/qtyUmbrellaSeal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/qty_format"
                            android:textSize="10sp"
                            android:textColor="#1b5692"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/umbrella_seal"
                            android:textSize="10sp"
                            android:textAlignment="center"
                            android:textColor="#1b5692"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Cap Cover Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/cap_cover_section"
                        android:textColor="#1b5692"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:background="#f3f2f2"/>

                    <ImageButton
                        android:id="@+id/addCapCover"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:src="@drawable/ic_add"
                        android:contentDescription="@string/add_cap_cover_button"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="8dp"
                        app:tint="#1b5692"/>
                </LinearLayout>

                <!-- Cap Cover Section Box -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:src="@drawable/invscover"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:id="@+id/qtySmallCapCover"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/qty_format"
                            android:textSize="10sp"
                            android:textColor="#1b5692"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/small_cap_cover"
                            android:textSize="10sp"
                            android:textAlignment="center"
                            android:textColor="#1b5692"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:src="@drawable/invbcover"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:id="@+id/qtyBigCapCover"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/qty_format"
                            android:textSize="10sp"
                            android:textColor="#1b5692"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/big_cap_cover"
                            android:textSize="10sp"
                            android:textAlignment="center"
                            android:textColor="#1b5692"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:src="@drawable/invsfull"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:id="@+id/qtyFullRoundCover"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/qty_format"
                            android:textSize="10sp"
                            android:textColor="#1b5692"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/full_round_cover"
                            android:textSize="10sp"
                            android:textAlignment="center"
                            android:textColor="#1b5692"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:src="@drawable/invleak"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:id="@+id/qtyNonLeakCover"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/qty_format"
                            android:textSize="10sp"
                            android:textColor="#1b5692"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/non_leak_cover"
                            android:textSize="10sp"
                            android:textAlignment="center"
                            android:textColor="#1b5692"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1b5692"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:itemIconTint="#fffafa"
        app:itemTextColor="#fffafa"
        app:menu="@menu/bottom_navmenu" />

</androidx.constraintlayout.widget.ConstraintLayout>