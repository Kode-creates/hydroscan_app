<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffafa"
    tools:context=".Generate">

    <!-- Logo and App Name -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="148dp"
        android:layout_height="37dp"
        android:layout_marginTop="18dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/logo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <TextView
        android:id="@+id/generateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate a QR Code"
        android:textColor="#1b5692"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        android:layout_marginTop="24dp"/>

    <!-- Form Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#fffafa"
        app:strokeColor="#1b5692"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toBottomOf="@+id/generateTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please fill out each field:"
                android:textColor="#1b5692"
                android:textSize="11sp"/>

            <!-- Name Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name*"
                android:textColor="#1b5692"
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/nameLayout"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:hint="Enter Name"
                android:layout_marginLeft="25dp"
                android:textColorHint="#801B5692"
                android:textColor="#1b5692"
                android:backgroundTint="#1b5692"
                android:textSize="10sp"
                android:layout_marginTop="10dp"/>

            <!-- Address Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address*"
                android:textColor="#1b5692"
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/addressInput"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:hint="Enter Address"
                android:layout_marginLeft="25dp"
                android:textColorHint="#801B5692"
                android:textColor="#1b5692"
                android:backgroundTint="#1b5692"
                android:textSize="10sp"
                android:layout_marginTop="10dp"/>

            <!-- Unit and Water Type Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <!-- Unit of Measure -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gallon Type (UOM)*"
                android:textColor="#1b5692"
                android:textSize="9sp"
                android:textStyle="bold"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/unitDropdownLayout"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="6dp"
                        android:hint="Select"
                        app:boxStrokeColor="#1b5692"
                        app:hintTextColor="#1b5692"
                        app:startIconTint="#1b5692"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                        <AutoCompleteTextView
                            android:id="@+id/unitSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#1b5692"
                            android:textSize="9sp"
                            android:inputType="none"
                            android:focusable="false" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Water Type -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Water type"
                android:textSize="9sp"
                android:textColor="#1b5692"
                android:textStyle="bold"/>

                    <RadioGroup
                        android:id="@+id/waterTypeGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">

                        <RadioButton
                            android:id="@+id/mineralRadio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="M"
                            android:textSize="9sp"
                            android:textColor="#1b5692"
                            android:buttonTint="#1b5692"
                            android:layout_marginEnd="10dp"/>

                        <RadioButton
                            android:id="@+id/alkalineRadio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A"
                            android:textColor="#1b5692"
                            android:buttonTint="#1b5692"
                            android:textSize="9sp" />
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

            <!-- Generate Button -->
            <Button
                android:id="@+id/generateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generate"
                android:textSize="11sp"
                android:textColor="#ffffff"
                android:backgroundTint="#1b5692"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1b5692"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:itemIconTint="#fffafa"
        app:itemTextColor="#fffafa"
        app:menu="@menu/bottom_navmenu" />

</androidx.constraintlayout.widget.ConstraintLayout>