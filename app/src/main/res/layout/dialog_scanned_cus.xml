<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fefafa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Customer Info -->
        <TextView
            android:id="@+id/nameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="12sp"
            android:padding="8dp"
            android:textColor="#1b5692"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/addressText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="12sp"
            android:padding="8dp"
            android:textColor="#1b5692"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/quantityText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:textSize="12sp"
            android:padding="8dp"
            android:textColor="#1b5692"
            android:textStyle="bold"/>

        <!-- Water Type Selection -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Water Type:"
            android:textColor="#1b5692"
            android:textStyle="bold"
            android:padding="8dp"
            android:textSize="12sp"/>

        <RadioGroup
            android:id="@+id/paymentStatusGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp"
            android:layout_gravity="center"
            android:gravity="center">

        <RadioButton
            android:id="@+id/radioMineral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mineral"
            android:buttonTint="#1b5692"
            android:textSize="12sp"
            android:textColor="#1b5692"
            android:layout_marginEnd="16dp"/>

        <RadioButton
            android:id="@+id/radioAlkaline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alkaline"
            android:buttonTint="#1b5692"
            android:textSize="12sp"
            android:textColor="#1b5692"/>

        </RadioGroup>

        <!-- ðŸ”¹ Advance Order Feature -->
        <!-- Pick-up and Delivery Titles (Side by Side) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:gravity="center">

            <!-- Pick-up Title -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pick-up:"
                android:textColor="#1b5692"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <!-- Delivery Title -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delivery:"
                android:textColor="#1b5692"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Pick-up and Delivery Calendars (Side by Side) -->
        <LinearLayout
            android:id="@+id/schedulingCalendarsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:gravity="center">

            <!-- Pick-up Date -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <Button
                    android:id="@+id/pickupDateButton"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Select"
                    android:textColor="#ffffff"
                    android:backgroundTint="#1b5692"
                    android:textSize="10sp"/>
            </LinearLayout>

            <!-- Delivery Date -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <Button
                    android:id="@+id/deliveryDateButton"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Select"
                    android:textColor="#ffffff"
                    android:backgroundTint="#1b5692"
                    android:textSize="10sp"/>
            </LinearLayout>
        </LinearLayout>
        <!-- ðŸ”¹ End Advance Order -->

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="12dp">

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="#ffff"
                android:textSize="12sp"
                android:backgroundTint="#8D8D8E"/>

            <Button
                android:id="@+id/submitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_marginStart="12dp"
                android:textColor="#ffff"
                android:backgroundTint="#1b5692"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
