<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fefafa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Customer Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: "
                android:textSize="12sp"
                android:textColor="#1b5692"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/nameValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textColor="#1b5692"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address: "
                android:textSize="12sp"
                android:textColor="#1b5692"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/addressValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textColor="#1b5692"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gallon liters (UOM): "
                android:textSize="12sp"
                android:textColor="#1b5692"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/uomValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textColor="#1b5692"/>
        </LinearLayout>

        <!-- Quantity Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity:"
            android:textColor="#1b5692"
            android:textStyle="bold"
            android:padding="8dp"
            android:textSize="12sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp"
            android:layout_gravity="center"
            android:gravity="center">
            
            <Button
                android:id="@+id/minusButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#1b5692"
                android:layout_marginEnd="8dp"/>
            
            <TextView
                android:id="@+id/quantityDisplay"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="1"
                android:textSize="14sp"
                android:textColor="#1b5692"
                android:gravity="center"
                android:background="#F0F0F0"
                android:layout_marginEnd="8dp"/>
            
            <Button
                android:id="@+id/plusButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#1b5692"/>
        </LinearLayout>

        <!-- Water Type Selection -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Water Type:"
            android:textColor="#1b5692"
            android:textStyle="bold"
            android:padding="8dp"
            android:textSize="12sp"/>

        <RadioGroup
            android:id="@+id/paymentStatusGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp"
            android:layout_gravity="center"
            android:gravity="center">

        <RadioButton
            android:id="@+id/radioMineral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mineral"
            android:buttonTint="#1b5692"
            android:textSize="12sp"
            android:textColor="#1b5692"
            android:layout_marginEnd="16dp"/>

        <RadioButton
            android:id="@+id/radioAlkaline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alkaline"
            android:buttonTint="#1b5692"
            android:textSize="12sp"
            android:textColor="#1b5692"/>

        </RadioGroup>


        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="12dp">

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="#ffff"
                android:textSize="12sp"
                android:backgroundTint="#8D8D8E"/>

            <Button
                android:id="@+id/submitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_marginStart="12dp"
                android:textColor="#ffff"
                android:backgroundTint="#1b5692"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

